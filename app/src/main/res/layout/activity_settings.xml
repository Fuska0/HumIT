<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/czuko_background"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/textViewNumberOfSongs"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="58dp"
        android:text="Guess Time:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGuessTimeSongs" />

    <EditText
        android:id="@+id/editNumberOfSongs"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="58dp"
        android:hint="Enter the number of songs"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumberOfSongs" />

    <TextView
        android:id="@+id/textViewGuessSongTime"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="58dp"
        android:text="Number of songs:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editGuessTimeSongs"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="58dp"
        android:hint="Enter the time of guessing the song"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGuessSongTime" />

    <Button
        android:id="@+id/buttonSaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="263dp"
        android:layout_marginBottom="60dp"
        android:onClick="saveSettings"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumberOfSongs" />

</androidx.constraintlayout.widget.ConstraintLayout>
