<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/czuko_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/selectPlaylist"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/round_button"

        android:onClick="selectPlaylist"
        android:text="Select Playlist"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/round_button"
        android:onClick="startGame"
        android:text="Start Game"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="64dp"
        android:layout_height="61dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="49dp"
        android:onClick="settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>